<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/share/tsung/tsung-1.0.dtd" [] >
<tsung loglevel="notice">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="www.ucsb-class-scheduler-get-all-courses.bdrmu4mt4q.us-west-2.elasticbeanstalk.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="64" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="128" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="256" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="30" unit="second">
      <users arrivalrate="512" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="5" duration="30" unit="second">
      <users arrivalrate="1024" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="6" duration="30" unit="second">
      <users arrivalrate="2048" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="7" duration="30" unit="second">
      <users arrivalrate="4096" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="8" duration="30" unit="second">
      <users arrivalrate="8196" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="9" duration="30" unit="second">
      <users arrivalrate="16384" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="10" duration="30" unit="second">
      <users arrivalrate="32768" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="11" duration="30" unit="second">
      <users arrivalrate="65536" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="12" duration="30" unit="second">
      <users arrivalrate="131072" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <!-- 1. Create user -->
      <setdynvars sourcetype="random_string" length="15">
        <var name="email" />
      </setdynvars>
      <setdynvars sourcetype="random_string" length="10">
       <var name="password" />
      </setdynvars>

      <request>
        <dyn_variable name="user_token"></dyn_variable>
        <http url='/user/create' version='1.1' method='POST'
          contents="email=%%_email%%@gmail.com&amp;password=%%_password%%">
        </http>
      </request>

      <!-- 2. Log in and add user_token to header (auto redirect, so no thinktime) -->
      <request>
        <http url='/user_token' version='1.1' method='GET'
          contents="user_token=%%_user_token%%">
        </http>
      </request>
    </session>

  </sessions>
</tsung>
